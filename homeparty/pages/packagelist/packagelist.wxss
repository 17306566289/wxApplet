.item-left{
width: 200rpx;
height: 200rpx;
padding: 20rpx ;
background-color: white;
}

.heading{
  margin: 0;
  padding: 30rpx;
  font-size: 11pt;
background-color: #fffe9b;
text-align: center;
}
.item{
  margin: 40rpx;
  display: flex;
  border-radius:10rpx;
  border: 1px solid #ddd;
box-shadow: 0px 2px 10px  #ccc;
padding: 10rpx 15rpx 5rpx 5rpx;
}
.item-middle{
  width: 500rpx;
  padding: 20rpx
}
.item-middle-content{
 font-size: 10pt;
 color: #999;
}
.item-right{
  padding-top: 20rpx;
  width: 100rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  align-items:flex-end;
}
.item-middle-head{
  color: #f4ea2a;
}
.item-right-price{
  color: #d81e06;
  font-size: 12pt;
  margin-bottom: 15rpx;

}
.item-right image{
  width: 50rpx;
  height: 50rpx;
  
}
.total{
  position: fixed;
  bottom: 0;
  height: 110rpx;
  width: 100%;
background-color: #fff100;
display: flex;
align-items:baseline;
justify-content: space-between;
}
